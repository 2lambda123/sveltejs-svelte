{
	"extends": "../../tsconfig.json",
	"compilerOptions": {
		"baseUrl": "../../",
		"paths": {
			"$runtime/*": ["src/runtime/*"]
		},
		// enable strictest options
		"allowUnreachableCode": false,
		"alwaysStrict": true,
		"noFallthroughCasesInSwitch": true,
		"noImplicitAny": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"strict": true,
	},
	"include": ["**/*.test-types.ts"]
}
