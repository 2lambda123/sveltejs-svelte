{
	"version": "0.2.0",
	"configurations": [
		{
			"type": "chrome",
			"request": "launch",
			"name": "Playground: Browser",
			"url": "http://localhost:10001"
		},
		{
			"type": "node",
			"request": "launch",
			"runtimeArgs": [
				"--watch"
			],
			"name": "Playground: Server",
			"outputCapture": "std",
			"program": "start.js",
			"cwd": "${workspaceFolder}/playgrounds/demo",
			"cascadeTerminateToConfigurations": [
				"Playground: Browser"
			]
		},
		{
			"type": "node",
			"request": "launch",
			"name": "Run sandbox",
			"program": "${workspaceFolder}/playgrounds/sandbox/run.js"
		},
		{
			"type": "node-terminal",
			"name": "Run Script: test",
			"request": "launch",
			"command": "pnpm test css -- -t omit-scoping-attribute-whitespace-multiple",
			"cwd": "${workspaceFolder}"
		}
	],
	"compounds": [
		{
			"name": "Playground: Full",
			"configurations": [
				"Playground: Server",
				"Playground: Browser"
			]
		}
	]
}